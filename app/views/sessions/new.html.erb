<h1>Login</h1>
<%= form_with(scope: :session,url: user_path(current_user),local: true)do |f| %>

<div class='user-group'>
  <%= f.label :email,'email' %>
  <%= f.email_field :email,class:'form-control' %>
</div>

<div class='user-group'>
  <%= f.label :password,'password' %>
  <%= f.password_field :password,class:'form-control' %>
</div>

<%= f.submit 'Go!',class:'btn btn-primary btn-block' %>
<% end %>
